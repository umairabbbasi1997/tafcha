<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ForgotPasswordFragment">




    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/user_blank_profile"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_bg"
        android:layout_marginHorizontal="@dimen/_17sdp"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginBottom="80dp"
        android:paddingHorizontal="@dimen/_35sdp"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile">

        <TextView
            android:id="@+id/tv_wieght"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wieght"
            style="@style/textStyleMenu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        </TextView>



        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekbar_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_thumb_drawable="@drawable/seekbar_thumb_icon"
            app:isb_max="150"
            app:isb_min="40"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="none"
            app:isb_tick_marks_size="0dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/color_gray"
            app:isb_thumb_color="@color/sky_blue"
            app:isb_thumb_size="@dimen/_30sdp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/sky_blue"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/color_gray"
            app:isb_track_background_size="@dimen/_3sdp"
            app:isb_track_progress_color="@color/color_pink"
            app:isb_track_progress_size="@dimen/_4sdp"
            app:isb_only_thumb_draggable="true"
            app:layout_constraintTop_toBottomOf="@id/tv_wieght"
            />


        <TextView
            android:id="@+id/tv_least_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40 kg"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/seekbar_weight"
            app:layout_constraintLeft_toLeftOf="parent"
            >

        </TextView>
        <TextView
            android:id="@+id/tv_most_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150 kg"
            android:layout_marginRight="@dimen/_8sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/seekbar_weight"
            app:layout_constraintRight_toRightOf="parent"
            >

        </TextView>

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/hieght"
            style="@style/textStyleMenu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_least_kg"
            >

        </TextView>

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/seekbar_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isb_thumb_drawable="@drawable/seekbar_thumb_icon"
            app:isb_max="200"
            app:isb_min="125"
            app:isb_progress="25"
            app:isb_seek_smoothly="true"
            app:isb_show_tick_marks_type="none"
            app:isb_tick_marks_size="0dp"
            app:isb_show_tick_texts="true"
            app:isb_tick_texts_size="15sp"
            app:isb_tick_texts_color="@color/color_gray"
            app:isb_thumb_color="@color/sky_blue"
            app:isb_thumb_size="@dimen/_30sdp"
            app:isb_show_indicator="rounded_rectangle"
            app:isb_indicator_color="@color/sky_blue"
            app:isb_indicator_text_color="@color/white"
            app:isb_indicator_text_size="18sp"
            app:isb_track_background_color="@color/color_gray"
            app:isb_track_background_size="@dimen/_3sdp"
            app:isb_track_progress_color="@color/color_pink"
            app:isb_track_progress_size="@dimen/_4sdp"
            app:isb_only_thumb_draggable="true"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_height"
            />



        <TextView
            android:id="@+id/tv_least_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125 cm"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/seekbar_height"
            app:layout_constraintLeft_toLeftOf="parent"
            >

        </TextView>
        <TextView
            android:id="@+id/tv_most_most"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 cm"
            android:layout_marginRight="@dimen/_8sdp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/seekbar_height"
            app:layout_constraintRight_toRightOf="parent"
            >

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textStyleWhite"
        android:text="@string/continue_"
        android:layout_marginHorizontal="@dimen/_33sdp"
        android:background="@drawable/btn_round_sky_blue"
        android:layout_marginBottom="@dimen/_22sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>