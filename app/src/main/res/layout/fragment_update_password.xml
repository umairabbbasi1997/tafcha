<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UpdatePasswordFragment">





    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_icon"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45sdp"
        android:layout_marginBottom="80dp"
        android:paddingHorizontal="@dimen/_35sdp"

        app:layout_constraintTop_toBottomOf="@+id/imgLogo">

        <EditText
            android:id="@+id/et_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_12sdp"
            style="@style/textStyleEditText"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/_20sdp"
            android:drawableTint="@color/color_pink"
            android:drawableLeft="@drawable/pass_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="@string/enter_old_pass"
            android:textColorHint="@color/color_gray"
            android:background="@drawable/rounded_stroke"
            >

        </EditText>

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_12sdp"
            style="@style/textStyleEditText"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="textPassword"

            android:layout_marginTop="@dimen/_22sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:drawableTint="@color/color_pink"
            android:drawableLeft="@drawable/pass_icon"
            app:layout_constraintTop_toBottomOf="@id/et_old_pass"
            android:hint="@string/enter_new_pass"
            android:textColorHint="@color/color_gray"
            android:background="@drawable/rounded_stroke"
            >

        </EditText>
        <EditText
            android:id="@+id/et_confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textStyleEditText"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_22sdp"
            android:drawablePadding="@dimen/_15sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:drawableTint="@color/color_pink"
            android:drawableLeft="@drawable/pass_icon"
            android:hint="@string/confirm_password"
            android:textColorHint="@color/color_gray"
            android:background="@drawable/rounded_stroke"
            app:layout_constraintTop_toBottomOf="@id/et_pass"
            >

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textStyleWhite"
            android:text="@string/continue_"
            android:background="@drawable/btn_round_sky_blue"
            android:layout_marginTop="@dimen/_22sdp"
            app:layout_constraintTop_toBottomOf="@id/et_confirm_pass"
            >

        </androidx.appcompat.widget.AppCompatButton>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>